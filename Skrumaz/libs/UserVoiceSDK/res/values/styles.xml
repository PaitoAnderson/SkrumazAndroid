<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="uv_ListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3DB5E1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/uv_list_separator</item>
    </style>
    
    <style name="uv_ListSeparatorLight" parent="uv_ListSeparator">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/uv_list_separator_light</item>
    </style>

</resources>