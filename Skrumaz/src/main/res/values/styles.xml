<resources>

    <!-- Application theme -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:actionBarStyle">@style/ActionBarTheme</item>

        <item name="android:actionBarItemBackground">@drawable/activated_background_holo_light</item>

        <item name="ptrHeaderTitleTextAppearance">@style/TextAppearanceCustomPtrHeaderTitle</item>

        <item name="android:popupMenuStyle">@style/PopupMenuTheme</item>

        <item name="android:dropDownListViewStyle">@style/DropDownListViewTheme</item>

        <item name="android:actionBarWidgetTheme">@style/ActionBarWidgetTheme</item>

        <item name="android:buttonStyle">@style/ButtonTheme</item>

        <item name="android:radioButtonStyle">@style/RadioTheme</item>

        <item name="android:checkboxStyle">@style/CheckTheme</item>

        <item name="android:listViewStyle">@style/ListViewTheme</item>

        <item name="android:listViewWhiteStyle">@style/ListViewTheme.White</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemTheme</item>

        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>

        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>

        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_light</item>

        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme</item>

        <item name="android:actionOverflowButtonStyle">@style/OverflowTheme</item>
    </style>

    <style name="PreferencesTheme" parent="AppTheme" />

    <style name="HelpTheme" parent="AppTheme" />

    <style name="FrameLayoutTheme" />

    <!-- Custom styles. -->
    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTheme.TitleTextStyle</item>
    </style>
    <style name="ActionBarTheme.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearanceCustomPtrHeaderTitle" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="ButtonTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="RadioTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>
    <style name="CheckTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>
    <style name="ListViewTheme" parent="android:Widget.ListView">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>
    <style name="ListViewTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>
    <style name="SpinnerItemTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@android:color/white</item>
    </style>
    <style name="PopupMenuTheme" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
    </style>
    <style name="ActionBarWidgetTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewTheme</item>
    </style>
    <style name="DropDownListViewTheme" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
        <item name="android:divider">@android:color/white</item>
    </style>
    <style name="SpinnerDropDownItemTheme" parent="android:Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_selector_holo_light</item>
        <item name="android:divider">@android:color/white</item>
    </style>
    <style name="OverflowTheme" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>
    <style name="DrawerTextWithoutIcon" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21.0sp</item>
        <item name="android:textColor">#ff505050</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DrawerTextWithIcon" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
